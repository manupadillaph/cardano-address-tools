{
  "compilerOptions": {
        "outDir": "./dist",
      "target": "ES2020",
      "module": "CommonJS",
      "lib": ["dom", "dom.iterable", "esnext"],
      "allowJs": true,
      "skipLibCheck": true,
      "strict": true,
      "forceConsistentCasingInFileNames": true,
      "noEmit": false,
      "esModuleInterop": true,
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "isolatedModules": true,
      "jsx": "preserve",
      "incremental": true,
      "sourceMap": true,
      "inlineSources": true,
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "baseUrl": ".",
      "plugins": [
          {
              "name": "next"
          }
      ],
      
  },
  "include": ["next-env.d.ts", "jest.config.js", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts", "instrumentation.ts", "server.ts", "__standalone__/convertAddressToPkh.mjs"],
  "exclude": ["node_modules", "_OLD", "src/**/_OUT/*", "_eslint-custom-rules", "_oracle-tool", "_smartcontracts", "_oracle-tool", "_config"]
}
